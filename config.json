{
  "resume_path": "input/resume.pdf",
  
  "explicit_skills": {
    "languages_frameworks": ["Python", "JavaScript", "TypeScript", "React", "FastAPI", "Flask", "Django", "C++", "Kotlin", "Java"],
    "tools_technologies": ["PostgreSQL", "MongoDB", "DynamoDB", "Supabase", "Redis", "SQLite", "Prisma"],
    "devops_cloud": ["AWS", "DynamoDB", "Lambda", "EC2", "S3", "Docker", "Git", "Jenkins", "GitHub Actions", "Vercel"]
  },
  
  "_comment_future": "Below settings are placeholders for future features",
  "auto_apply_enabled": false,
  "max_applications_per_session": 10,
  
  "agents": {
    "_comment": "AI agent configuration for task routing and cost optimization",
    "enable_token_tracking": true,
    
    "cover_letter_agent": {
      "provider": "gemini",
      "model": "gemini-1.5-flash",
      "_comment": "High-quality creative writing - worth the cost"
    },
    
    "keyword_extractor_agent": {
      "provider": "groq",
      "model": "llama-3.1-8b-instant",
      "_comment": "Fast keyword extraction - Groq provides high rate limits"
    },
    
    "document_classifier_agent": {
      "provider": "groq",
      "model": "llama-3.1-8b-instant",
      "_comment": "Binary classification - fast and cheap with Groq"
    }
  },
  
  "matcher": {
    "embedding_model": "sentence-transformers/all-MiniLM-L6-v2",
    "similarity_threshold": 0.30,
    "top_k": 5,
    "min_match_score": 30,
    "auto_save_threshold": 30,
    "penalty_per_missing_must_have": 0.05,
    
    "_comment_future_llm": "LLM settings for backwards compatibility",
    "llm_provider": "gemini",
    "use_synonyms": false,
    
    "llm_models": {
      "gemini_fast": "gemini-2.0-flash-exp",
      "gemini_standard": "gemini-1.5-flash",
      "gemini_lite": "gemini-2.0-flash-lite"
    },
    
    "weights": {
      "keyword_match": 0.35,
      "semantic_coverage": 0.40,
      "semantic_strength": 0.10,
      "seniority_alignment": 0.15
    }
  },
  
  "cover_letter": {
    "template_path": "template.docx",
    "cached_jobs_path": "data/jobs_scraped.json",
    "prompt_template": "You are an expert cover letter writer. Write a professional, enthusiastic cover letter that highlights relevant skills and experience. Keep it between 100-400 words. Format it properly with paragraphs."
  },
  
  "waterlooworks_folder": "geese",
  "preferred_locations": [],
  "keywords_to_match": [],
  "companies_to_avoid": []
}
